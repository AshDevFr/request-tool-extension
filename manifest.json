{
  "manifest_version": 2,

  "name": "Request tools Plugin",
  "description": "This extension allows you to scramble your requests",
  "version": "1.0",
  "browser_action": {
    "default_title": "Request tools",
    "default_icon": "assets/webhook.png"
  },

  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}
